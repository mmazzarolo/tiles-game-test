{
  "extends": ["standard", "standard-jsx"],
  "globals": {
    "fetch": true,
    "__DEV__": true
  },
  "parser": "babel-eslint",
  "plugins": ["import"],
  "rules": {
    "no-unused-vars": 1,
    "arrow-parens": 0,
    "import/default": 2,
    "import/named": 2,
    "import/namespace": 2,
    "import/no-unresolved": [2, { ignore: ['\.png$'] }],
    "import/export": 2,
    "import/no-duplicates": 2,
    "import/imports-first": 2,
    "react/jsx-boolean-value": 0
  },
  "settings": {
    "import/ignore": [
      "node_modules",
      ".(png|jpg)$",
      ".(scss|less|css)$",
      ".[^js(x)?]+$"
    ]
  }
}
